<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/title_bar_view"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:id="@+id/cy_scanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="2dp"
                        android:src = "@mipmap/scanner_icon"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/text_color"
                        android:textSize="18dp"
                        android:text="点击扫码气瓶标签"/>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/tintgray"/>

            <RelativeLayout
                android:id="@+id/cy_count_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/cy_count_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_color"
                    android:textSize="18dp"
                    android:text="已扫描气瓶 0 个"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text=">"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_color"
                    android:textSize="16dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/tintgray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/full_cy"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/item_check_on"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满瓶"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_color"
                    android:textSize="16dp"/>

                <ImageView
                    android:id="@+id/empty_cy"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:src="@mipmap/item_check_off"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空瓶"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_color"
                    android:textSize="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="订单号(选填)："
                    android:textColor="@color/text_color"
                    android:textSize="16dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="@drawable/text_edittext">

                    <EditText
                        android:id="@+id/edittext_customer_order"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="45dp"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/text_color"
                        android:textSize="16dp"
                        android:background="@color/white"/>

                    <ImageView
                        android:id="@+id/customer_order_scanner"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp"
                        android:src = "@mipmap/scanner_icon"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"/>

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="客户："
                        android:textColor="@color/text_color"
                        android:textSize="16dp"/>

                    <EditText
                        android:id="@+id/edittext_customer"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:textColor="@color/text_color"
                        android:textSize="16dp"
                        android:background="@drawable/text_edittext"/>

                </LinearLayout>

                <com.org.gascylindermng.view.WrapContentListView
                    android:id="@+id/customer_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:visibility="invisible">
                </com.org.gascylindermng.view.WrapContentListView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="运单号（发货单号）："
                    android:textColor="@color/text_color"
                    android:textSize="16dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="@drawable/text_edittext">

                    <EditText
                        android:id="@+id/edittext_trans_order"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="45dp"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/text_color"
                        android:textSize="16dp"
                        android:background="@color/white"/>

                    <ImageView
                        android:id="@+id/trans_order_scanner"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="5dp"
                        android:src = "@mipmap/scanner_icon"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"/>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="车牌："
                        android:textColor="@color/text_color"
                        android:textSize="16dp"/>

                    <EditText
                        android:id="@+id/edittext_car_number"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:textColor="@color/text_color"
                        android:textSize="16dp"
                        android:background="@drawable/text_edittext"/>

                </LinearLayout>

                <com.org.gascylindermng.view.WrapContentListView
                    android:id="@+id/car_number_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:visibility="invisible">

                </com.org.gascylindermng.view.WrapContentListView>

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="司机："
                android:textColor="@color/text_color"
                android:textSize="16dp"/>

                <EditText
                android:id="@+id/edittext_driver"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:textColor="@color/text_color"
                android:textSize="16dp"
                android:background="@drawable/text_edittext"/>

            </LinearLayout>

            <com.org.gascylindermng.view.WrapContentListView
                android:id="@+id/driver_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:visibility="invisible">
            </com.org.gascylindermng.view.WrapContentListView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="押运员："
                        android:textColor="@color/text_color"
                        android:textSize="16dp"/>

                    <EditText
                        android:id="@+id/edittext_supercargo"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:textColor="@color/text_color"
                        android:textSize="16dp"
                        android:background="@drawable/text_edittext"/>

                </LinearLayout>

                <com.org.gascylindermng.view.WrapContentListView
                    android:id="@+id/supercargo_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:visibility="invisible">

                </com.org.gascylindermng.view.WrapContentListView>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/tintgray"/>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确  定"
            android:textColor="@color/white"
            android:background="@color/myblue"
            android:textSize="18sp"/>
    </LinearLayout>

</RelativeLayout>